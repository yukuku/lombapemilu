<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#09c"
        android:layout_height="match_parent">

    <LinearLayout
            android:paddingTop="20dp"

            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content">


            <FrameLayout android:layout_width="148dp"
                         android:layout_height="178dp"
                         android:background="@drawable/bingkai"
                         android:layout_gravity="center_horizontal">

                <ImageView
                        android:layout_width="140dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:id="@+id/imgFoto1"/>

            </FrameLayout>

            <FrameLayout android:layout_width="148dp"
                         android:layout_height="178dp"
                         android:background="@drawable/bingkai"
                         android:layout_marginLeft="32dp"
                         android:layout_gravity="center_horizontal">

                <ImageView
                        android:layout_width="140dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:id="@+id/imgFoto2"/>

            </FrameLayout>
        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp">

            <lomba.app.widget.FontTextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Ir. Dr. Supriadi ayam goreng dan teman-temannya"
                    android:id="@+id/tNama1"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"/>

            <lomba.app.widget.FontTextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="32dp"
                    android:text="Ir. Dr. Supriadi ayam goreng dan teman-temannya"
                    android:id="@+id/tNama2"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"/>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">

            <lomba.app.widget.FontTextView
                    android:text="perempuan"
                    android:id="@+id/tGender1"
                    style="@style/BandingItem"/>

            <lomba.app.widget.FontTextView
                    android:layout_marginLeft="32dp"
                    android:text="perempuan"
                    android:id="@+id/tGender2"
                    style="@style/BandingItem"/>

        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">

            <lomba.app.widget.FontTextView
                    android:text="Lokasi lokasi lokasi"
                    android:id="@+id/tLokasi1"
                    style="@style/BandingItem"/>

            <lomba.app.widget.FontTextView
                    android:layout_marginLeft="32dp"
                    android:text="Lokasi lokasi lokasi"
                    android:id="@+id/tLokasi2"
                    style="@style/BandingItem"/>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">

            <lomba.app.widget.FontTextView
                    android:text="66 thn"
                    android:id="@+id/tUsia1"
                    style="@style/BandingItem"/>

            <lomba.app.widget.FontTextView
                    android:layout_marginLeft="32dp"
                    android:text="66 thn"
                    android:id="@+id/tUsia2"
                    style="@style/BandingItem"/>

        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">

            <lomba.app.widget.FontTextView
                    android:text="islam"
                    android:id="@+id/tAgama1"
                    style="@style/BandingItem"/>

            <lomba.app.widget.FontTextView
                    android:layout_marginLeft="32dp"
                    android:text="islam"
                    android:id="@+id/tAgama2"
                    style="@style/BandingItem"/>

        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">

            <lomba.app.widget.FontTextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="Keluarga"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"/>

        </LinearLayout>



        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">

            <lomba.app.widget.FontTextView
                    android:text="kawin"
                    android:id="@+id/tStatus1"
                    style="@style/BandingItem"/>

            <lomba.app.widget.FontTextView
                    android:layout_marginLeft="32dp"
                    android:text="tidak kawin"
                    android:id="@+id/tStatus2"
                    style="@style/BandingItem"/>

        </LinearLayout>



        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">

            <lomba.app.widget.FontTextView
                    android:text="2 anak"
                    android:id="@+id/tAnak1"
                    style="@style/BandingItem"/>

            <lomba.app.widget.FontTextView
                    android:layout_marginLeft="32dp"
                    android:text="3 anak"
                    android:id="@+id/tAnak2"
                    style="@style/BandingItem"/>

        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="16dp">

            <lomba.app.widget.FontTextView
                    android:text="2 anak anak anak anak anak anak"
                    android:id="@+id/tLokasiJuga1"
                    style="@style/BandingItem"/>

            <lomba.app.widget.FontTextView
                    android:layout_marginLeft="32dp"
                    android:text="2 anak anak anak anak anak anak"
                    android:id="@+id/tLokasiJuga2"
                    style="@style/BandingItem"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
